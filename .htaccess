RewriteEngine On

# No aplicar reglas a archivos existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir API al API Gateway
RewriteRule ^api/(.*)$ index.php?url=api/$1 [L,QSA]

# Redirigir todo lo dem치s al frontend
RewriteRule ^(.*)$ frontend/$1 [L]

# Configuraci칩n de seguridad para archivos est치ticos
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg)$">
    SetHandler none
    SetHandler default-handler
    Options -ExecCGI
    RemoveHandler .php
</FilesMatch>

# Configuraci칩n CORS para las APIs
<IfModule mod_headers.c>
    <FilesMatch "\.(php)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule># Redirigir favicon.ico a la ubicaci뺥n correcta
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} ^/favicon\.ico [NC]
    RewriteRule .* /frontend/img/favicon.ico [L]
</IfModule>